#!/usr/bin/env php
<?php
// Make sure this script is being run over the PHP CLI!
if ('cli' !== php_sapi_name()) {
	return;
}

require_once __DIR__ . '/../index.php';

use function PhpcsChanged\Cli\{
	printHelp,
	printErrorAndExit,
	getDebug,
	getReporter,
	runManualWorkflow,
	runSvnWorkflow
};

$options = getopt(
	'h',
	[
		'help',
		'diff:',
		'phpcs-orig:',
		'phpcs-new:',
		'svn:',
		'standard:',
		'report:',
		'debug',
	]
);

if (isset($options['h']) || isset($options['help'])) {
	printHelp();
}

$debug = getDebug(isset($options['debug']));
$debug('Running...');

$reportType = $options['report'] ?? 'full';
$diffFile = $options['diff'] ?? null;
$phpcsOldFile = $options['phpcs-orig'] ?? null;
$phpcsNewFile = $options['phpcs-new'] ?? null;

if ($diffFile && $phpcsOldFile && $phpcsNewFile) {
	runManualWorkflow($reportType, $diffFile, $phpcsOldFile, $phpcsNewFile);
}

$svnFile = $options['svn'] ?? null;
if ($svnFile) {
	runSvnWorkflow($svnFile, $reportType, $options, $debug);
}

printHelp();
